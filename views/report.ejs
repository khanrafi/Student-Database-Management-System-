<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="/design/assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>DBMS group-7</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
	<meta name="viewport" content="width=device-width" />
	<script src="/design/Chart.min.js"></script>

	<!-- Bootstrap core CSS     -->
	<link href="/design/assets/css/bootstrap.min.css" rel="stylesheet" />

	<!-- Animation library for notifications   -->
	<link href="/design/assets/css/animate.min.css" rel="stylesheet" />

	<!--  Light Bootstrap Table core CSS    -->
	<link href="/design/assets/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />


	<!--  CSS for Demo Purpose, don't include it in your project     -->
	<link href="/design/assets/css/demo.css" rel="stylesheet" />


	<!--     Fonts and icons     -->
	<link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
	<link href="/design/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
</head>

<body>

	<div class="wrapper">
		<div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">

			<!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->


			<div class="sidebar-wrapper">
				<div class="logo">
					<a href=<%=link + "profile" %> class="simple-text">
						DBMS
					</a>
				</div>

				<ul class="nav">
					<li>
						<a href=<%=link + "profile" %>>
							<i class="pe-7s-user"></i>
							<p>User Profile</p>
						</a>
					</li>
					<li class="active">
						<a href=<%=link + "report" %>>
							<i class="pe-7s-note2"></i>
							<p>Health Reports</p>
						</a>
					</li>
					<li>
						<a href=<%=link + "medicine" %>>
							<i class="pe-7s-news-paper"></i>
							<p>Prescribed Medicines</p>
						</a>
					</li>
					<li>
						<a href=<%=link + "cure" %>>
							<i class="pe-7s-graph"></i>
							<p>Look For Cure</p>
						</a>
					</li>
					<li>
						<a href=<%=link + "emergency" %>>
							<i class="pe-7s-science"></i>
							<p>Emergency Medical Aid</p>
						</a>
					</li>
					<li>
						<a href=<%=link + "contact" %>>
							<i class="pe-7s-map-marker"></i>
							<p>Contact with Doctor</p>
						</a>
					</li>
					<li>
						<a href=<%=link + "notifications" %>>
							<i class="pe-7s-bell"></i>
							<p>Notifications</p>
						</a>
					</li>
					<li class="active-pro">
						<a href=<%=link + "help" %>>
							<i class="pe-7s-rocket"></i>
							<p>Financial help</p>
						</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="main-panel">
			<nav class="navbar navbar-default navbar-fixed">
				<div class="container-fluid">

					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav navbar-left">
							<li><br>
								<p>
									<%="Mother:  "+mother_name %>
								</p>
							</li>
						</ul>

						<ul class="nav navbar-nav navbar-right">

							<li>
								<a href=<%=link %>>
									<p>Log out</p>
								</a>
							</li>
							<li class="separator hidden-lg hidden-md"></li>
						</ul>
					</div>
				</div>
			</nav>


			<div class="content">
				<div class="container-fluid">
					<div class="row">
						<div class="col-md-12">
							<div class="card">

								<div class="header">
									<h4 class="title">Health Report</h4>
									<p class="category">RBC COUNT,BLOOD SUGAR LEVEL,HDL CHOLESTEROL,LDL CHOLESTEROL,BLOOD UREA,HEMOGLOBIN,BLOOD PRESSURE</p>
								</div>
								<div class="content">


									<canvas id="myChart"></canvas>

									<script type="text/javascript">
										var mychart = document.getElementById('myChart').getContext('2d');
										<%var color = ['#B388FF','#8C9EFF','#B3E5FC','#F0F4C3','#C8E6C9','#FFD54F','#FFCCBC'];%>
										var reportChart =new Chart(myChart,{
											type: 'bar',
											data:{
												labels:[
													<%for(i=0;i<=6;i++){%>
															<%for(j=0;j<report_data.length;j++){%>
																<%if(i==6 && j==report_data.length-1){%>
																		'<%= col_title[i]%>'
																<%}else{%>
																	'<%= col_title[i]%>',
																<%}%>
															<%}%>
													<%}%>

												],
												datasets:[{
													label:'Health Report',
													data:[
														<%for(i=1;i<=7;i++){%>
												<%for(j=0;j<report_data.length;j++){%>
														<%if(i==7 && j==report_data.length-1){%>
																'<%= report_data[j][i]%>'
														<%}else{%>
															'<%= report_data[j][i]%>',
														<%}%>
													<%}%>
											<%}%>


													],
													backgroundColor:[
														<%for(i=0;i<=6;i++){%>
												<%for(j=0;j<report_data.length;j++){%>
														<%if(i==6 && j==report_data.length-1){%>
																 '<%= color[i]%>'
														<%}else{%>
															'<%= color[i]%>',
														<%}%>
													<%}%>
											<%}%>
													],
													borderWidth:1,
													borderColor:'#777',
													hoverBorderWidth:3,
													hoverBorderColor:'#000'
												}]
											},
											options:{

											}
										});
									</script>


								</div>
							</div>
						</div>

					</div>

				</div>
			</div>


		</div>
	</div>


</body>

<!--   Core JS Files   -->
