<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="/design/assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>DBMS group-7</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/design/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="/design/assets/css/animate.min.css" rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="/design/assets/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet"/>


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/design/assets/css/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="/design/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />

</head>
<body>

<div class="wrapper">
    <div class="sidebar" data-color="purple" data-image="assets/img/sidebar-5.jpg">

    <!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->


    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href=<%=link + "profile"%> class="simple-text">
                    DBMS
                </a>
            </div>

             <ul class="nav">
                <li>
                    <a href=<%=link + "profile"%>>
                        <i class="pe-7s-user"></i>
                        <p>User Profile</p>
                    </a>
                </li>
                <li>
                    <a href=<%=link + "report"%>>
                        <i class="pe-7s-note2"></i>
                        <p>Health Reports</p>
                    </a>
                </li>
                <li>
                    <a href=<%=link + "medicine"%>>
                        <i class="pe-7s-news-paper"></i>
                        <p>Prescribed Medicines</p>
                    </a>
                </li>
				 <li>
                    <a href=<%=link + "cure"%>>
                        <i class="pe-7s-graph"></i>
                        <p>Look For Cure</p>
                    </a>
                </li>
                <li>
                    <a href=<%=link + "emergency"%>>
                        <i class="pe-7s-science"></i>
                        <p>Emergency Medical Aid</p>
                    </a>
                </li>
                <li class="active">
                    <a href=<%=link + "contact"%>>
                        <i class="pe-7s-map-marker"></i>
                        <p>Contact with Doctor</p>
                    </a>
                </li>
                <li>
                    <a href=<%=link + "notifications"%>>
                        <i class="pe-7s-bell"></i>
                        <p>Notifications</p>
                    </a>
                </li>
				<li class="active-pro">
                    <a href=<%=link + "help"%>>
                        <i class="pe-7s-rocket"></i>
                        <p>Financial help</p>
                    </a>
                </li>
            </ul>
    	</div>
    </div>

    <div class="main-panel">
		<nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">

                <div class="collapse navbar-collapse">
									<ul class="nav navbar-nav navbar-left">
										<li><br>
											<p>
												<%="Mother:  "+mother_name %>
											</p>
										</li>
									</ul>

                    <ul class="nav navbar-nav navbar-right">

                        <li>
                            <a href=<%=link%>>
                                <p>Log out</p>
                            </a>
                        </li>
						<li class="separator hidden-lg hidden-md"></li>
                    </ul>
                </div>
            </div>
        </nav>

				<div class="content">
						<div class="container-fluid">
								<div class="row">
										<div class="col-md-12">
												<div class="card">
														<div class="header">
																<h4 class="title">Contact with Doctors</h4>
																<p class="category">Describe your problems specificly..</p>
														</div>

												</div>

										</div>
										<div class="col-md-12">
												<div class="card">
													<form action="/contacted" method="POST">
														<div class="login_form container form-start col-6 ">


															<div class="form-group">
																<label for="role">Select Doctor's  Email to contact</label>
																	<select class="form-control" id="email" name="email">

																		<% for(var i=0 ; i<data1.length ; i++) { %>

																						<option><%=data1[i][2]%></option>

																		<% } %>

																	</select>

																	<br><br/>

															</div>
															<div class="form-group">
																	<label for="msg" >Message </label>
																	<input type="text" class="form-control" id="msg" name="msg" placeholder="Type your message...">
																</div>
															<br>
															<button type="submit" class="btn btn-primary">SEND</button><br>

														</div>

													</form>

												</div>

										</div>
										<div class="col-md-12">
												<div class="card">
													<div class="table-responsive-xl table_container1">
														<br><br>
														<table class="table table-hover table-dark">

															<thead>
																<th>Sent To</th>
																<th>Message</th>
															</thead>

															<tbody>
																<% for(var i=0 ; i<data2.length ; i++) { %>
																<tr>
																	<td>
																		<%= data2[i][3] %>
																	</td>
																	<td>
																		<%= data2[i][1] %>
																	</td>
																</tr>
																<% } %>
															</tbody>
														</table>
													</div>
												</div>
										</div>


								</div>
						</div>
				</div>

    </div>
</div>


</body>

        <!--   Core JS Files   -->
    <script src="/design/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
	<script src="/design/assets/js/bootstrap.min.js" type="text/javascript"></script>

	<!--  Charts Plugin -->
	<script src="/design/assets/js/chartist.min.js"></script>

    <!--  Notifications Plugin    -->
    <script src="/design/assets/js/bootstrap-notify.js"></script>

    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
	<script src="/design/assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

	<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
	<script src="/design/assets/js/demo.js"></script>



</html>
