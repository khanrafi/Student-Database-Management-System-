            <a role="button" class="btn btn-dark btn-outline-success btn-sm mycss" href=<%=link + "register" %>>Register</a>
          </li>
          <li class="nav-item">
            <a role="button" class="btn btn-dark btn-outline-secondary btn-sm mycss" href=<%=link + "home" %>>Logout</a>
          </li>
      </ul>
    </div>

  </nav>
  <br>




  <form action="/notification-sent" method="POST">

    <div class="row">
      <div class="login_form container form-start col-6 ">
        <div class="jumbotron ">
          <center>
            <h4>Sent reply notification to patients</h4>
          </center>

          <div class="form-group">
            <label for="role">Select Patient ID</label>
            <select class="form-control" id="id" name="id">

              <% for(var i=0 ; i<data1.length ; i++) { %>

              <option>
                <%=data1[i][2]%>
              </option>

              <% } %>

            </select>
            <br>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="test" name="msg" id="msg">
              <label class="form-check-label" for="msg">Send Message</label>
            </div>
            <br><br />

          </div>
          <br>
          <button type="submit" class="btn btn-primary">SEND</button><br>
          <a href=<%=link +"/admin-home"%> type="button" class="btn btn-primary btn-sm ">Return Home</a>
        </div>
      </div>
    </div>
  </form>


<div class="row">

  <div class="col-md-6">
    <div class="table-responsive-xl table_container1">
      <h4>Messages from patients</h4>
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <td scope="col"> Message ID </td>
            <td scope="col"> Message </td>
            <td scope="col"> Person ID </td>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0 ; i<data1.length ; i++) { %>
          <tr>
            <% for (var j = 0; j <data1[i].length-1; j++) { %>
            <td>
              <%= data1[i][j] %>
            </td>
            <% } %>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>



  <div class="col-md-6">
    <div class="table-responsive-xl table_container1">
      <h4>Messages sent to patients</h4>
      <table class="table table-hover table-dark">
        <thead>
          <tr>
            <td scope="col"> Notification ID </td>
            <td scope="col"> Message </td>
            <td scope="col"> Person ID </td>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0 ; i<data2.length ; i++) { %>
          <tr>
            <% for (var j = 0; j <data2[i].length-1; j++) { %>
            <td>
              <%= data2[i][j] %>
            </td>
            <% } %>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>





