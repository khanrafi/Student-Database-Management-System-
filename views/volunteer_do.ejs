		.viewer_btn{
			background-color: #01579B;
			padding-left: 10px;
			padding-right: 10px;
		}
		.dev_btn{
			background-color: #EEFF41;
			padding-left: 10px;
			padding-right: 10px;
		}
		.admin_btn{
			background-color: #D84315;
			padding-left: 10px;
