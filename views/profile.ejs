			<div class="content">
				<div class="container-fluid">

					<div class="row">
							<form action=<%=link + "update"%> method="post">
						<div class="col-md-6">
							<div class="card">
								<div class="header">
									<h4 class="title">Edit Profile</h4>
								</div>
								<div class="content">

									<div class="row">
										<div class="col-md-6">

											<div class="form-group">
												<label for="id">ID </label>
												<input type="text" class="form-control" id="id" name="id" placeholder="Enter your ID" value=<%=data1[0][0] %> readonly="readonly">
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="name">Name</label>
												<input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" value=<%=data1[0][1] %>>
											</div>
										</div>

									</div>

									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="dob">Date of Birth</label>
																				<% var date=new Date(data1[0][2]);%>
																				<%var ds = date.toString();%>
																				<%var month= date.getMonth();%>
												<input type="text" class="form-control" id="dob" name="dob" placeholder="Enter your date of birth" value=<%=date.getDate() + "/" + (month+1) + "/" + date.getFullYear() %>>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="email">Email</label>

												<input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value=<%=data1[0][3] %>>
											</div>
										</div>
									</div>

									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="nationality">Nationality</label>
												<input type="text" class="form-control" id="nationality" name="nationality" placeholder="Enter your nationality" value=<%=data1[0][4] %>>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="blood">Blood Group</label>
												<input type="blood" class="form-control" id="blood" name="blood" placeholder="Enter your blood group" value=<%=data1[0][5] %>>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="religion">Religion </label>
												<input type="religion" class="form-control" id="religion" name="religion" placeholder="Enter your religion" value=<%=data1[0][6] %>>
											</div>
										</div>
										<div class="col-md-6">
											<div class="container d-flex justify-content-center">
												<br>
												<button type="submit" class="btn btn-primary submit">Update</button>

											</div>
										</div>


									</div>
								</div>
							</div>



						</div>



						<div class="col-md-6">
							<div class="card">

								<div class="content">

									<div class="row">

										<div class="col-md-12">
											<div class="form-group d-flex flex-column justify-content-around contenting">
												<div class="container align-self-start">
													GENDER
												</div>
												<div class="container custom-control custom-radio">
													<input type="radio" id="Male" name="GENDER" value="Male" class="custom-control-input">
													<label class="custom-control-label" for="Male">Male</label>
												</div>
												<div class="container custom-control custom-radio">
													<input type="radio" id="Female" name="GENDER" value="Female" class="custom-control-input" checked>
													<label class="custom-control-label" for="Female">Female</label>
												</div>
												<div class="container custom-control custom-radio">
													<input type="radio" id="Other" name="GENDER" value="Other" class="custom-control-input">
													<label class="custom-control-label" for="Other">Other</label><br>
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="city">City </label>
												<input type="text" class="form-control" id="city" name="city" placeholder="Enter your city" value=<%=data1[0][8] %>>
											</div>
										</div>

										<div class="col-md-6">
											<div class="form-group">
												<label for="zip">Zip code </label>
												<input type="text" class="form-control" id="zip" name="zip" placeholder="Enter zip code" value=<%=data1[0][9] %>>
