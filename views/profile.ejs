																					<% var date=new Date(data2[0][3]);%>
																					<%var ds = date.toString();%>
																					<%var month= date.getMonth();%>
													<input type="text" class="form-control" id="lmp" name="lmp" placeholder="Enter your last LMP Date" value=<%=date.getDate() + "/" + (month+1) + "/" + date.getFullYear() %>>
