										</div>
										<div class="col-md-12">
											<div class="form-group">
												<label for="street">Street name </label>
												<input type="text" class="form-control" id="street" name="street" placeholder="Enter street name" value=<%=data1[0][10] %>>
											</div>
										</div>
										<div class="col-md-12">
											<div class="form-group">
												<label for="appartment">Appartment no </label>
												<input type="text" class="form-control" id="appartment" name="appartment" placeholder="Enter appartment no" value=<%=data1[0][11] %>>
											</div>
										</div>
									</div>


									</div>

								</div>
							</div>

	</form>
						</div>



						<div class="row">
								<form action=<%=link + "update-health"%> method="post">
